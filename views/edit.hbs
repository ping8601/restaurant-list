<div class="row mt-5 form">
  <div class="col-md-6 m-auto">
    <div class="card card-body p-5">
      <h1 class="text-center mb-5">Edit Restaurant</h1>
      <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="name" class="col-form-label">Name</label>
          </div>
          <div class="col-8">
            <input type="text" id="name" class="form-control" name="name" placeholder="Please enter restaurant name..."
              value="{{ restaurant.name }}" required>
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="category" class="col-form-label">Category</label>
          </div>
          <div class="col-8">
            <select class="form-control" id="category" name="category" required>
              <option selected>{{ restaurant.category }}</option>
              <option value="American">American</option>
              <option value="Brunch">Brunch</option>
              <option value="Bar">Bar</option>
              <option value="Cafe">Cafe</option>
              <option value="Chinese">Chinese</option>
              <option value="European">European</option>
              <option value="Japanese">Japanese</option>
              <option value="Korean">Korean</option>
              <option value="Italian">Italian</option>
              <option value="Middle Eastern">Middle Eastern</option>
              <option value="Others">Others</option>
            </select>
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="image" class="col-form-label">Image URL</label>
          </div>
          <div class="col-8">
            <input type="url" id="image" name="image" class="form-control" placeholder="Please enter image URL..."
              value="{{ restaurant.image }}">
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="location" class="col-form-label">Address</label>
          </div>
          <div class="col-8">
            <input type="text" id="location" name="location" class="form-control"
              placeholder="Please enter restanrant's address..." value="{{ restaurant.location }}" required>
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="phone" class="col-form-label">Tel</label>
          </div>
          <div class="col-8">
            <input type="text" id="phone" name="phone" class="form-control"
              placeholder="Please enter restaurant's phone number..." value="{{ restaurant.phone }}" required>
            <small id="phoneHelp" class="form-text text-muted">ex: 02 2363 8009</small>
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="google_map" class="col-form-label">Google Maps URL</label>
          </div>
          <div class="col-8">
            <input type="url" id="google_map" name="google_map" class="form-control"
              placeholder="Please enter restaurant's Google Maps URL" value="{{ restaurant.google_map }}">
          </div>
        </div>
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="rating" class="col-form-label">Rating</label>
          </div>
          <div class="col-8">
            <input type="number" step="0.1" id="rating" name="rating" class="form-control"
              placeholder="Please enter restaurant's rating..." value="{{ restaurant.rating }}">
          </div>
        </div>
      
      
        <div class="row mt-3">
          <div class="col-4">
            <label for="description" class="col-form-label">Description</label>
          </div>
          <div class="col-8">
            <textarea class="form-control" id="description" name="description" rows="3"
              placeholder="Please enter restanrant's description...">{{ restaurant.description }}</textarea>
          </div>
        </div>

        <div class="row mt-5">
          <button type="submit" class="btn btn-outline-info btn-block">Save</button>
          <form action="/restaurants/{{ restaurant._id }}/delete" method="POST">
            <button type="submit" class="btn btn-outline-danger btn-block">Delete</button>
          </form>
          <a href="/" class="btn btn-outline-secondary btn-block">Return</a>
        </div>
      </form>
    </div>
  </div>
</div>



