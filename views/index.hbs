<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <h4 class="mb-2">Find Restaurants:</h4>
    <div class="search-bar-inner">
      <form class="row" action="/search">
        <div class="col-9 input-group">
          <input type="text" name="keyword" class="form-control" placeholder="Plase enter restaurant's name or type..." aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="col-3">
          <select class="form-control" id="sortingType" name="sortingType" onchange="submit();">
            <option value="1" {{#if typeObject.isOne }}selected{{/if}}>A → Z</option>
            <option value="2" {{#if typeObject.isTwo }}selected{{/if}}>Z → A</option>
            <option value="3" {{#if typeObject.isThree }}selected{{/if}}>Type</option>
            <option value="4" {{#if typeObject.isFour }}selected{{/if}}>Area</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <a class="btn btn-info m-1" href="/restaurants/new">Create</a>
      <div class="d-flex justify-content-center">
        <span>{{ message }}</span>
      </div>
      <div class="d-flex justify-content-start" style="flex-wrap: wrap">
      {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card m-1" style="width: 18rem;">
            <img class="card-img-top" src="{{ this.image }}"
              alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="d-flex flex-row-reverse mb-3">
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
              </form>
              <a href="/restaurants/{{ this._id }}/edit" class="btn btn-info mr-2">Edit</a>
            </div>
          </div>
        </a>
      {{/each}}
      </div>
    </div>
  </div>
</div>