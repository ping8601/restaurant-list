<div class="row mt-5 form">
  <div class="col-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mb-2">
          <label for="name" class="mb-2">Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Please enter your name..." value="{{ name }}">
        </div>
        <div class="mb-2">
          <label for="email" class="mb-2">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Please enter your email..." value="{{ email }}">
        </div>
        <div class="mb-2">
          <label for="password" class="mb-2">Password</label>
          <input type="password" class="form-control" name="password" id="password"
            placeholder="Please enter your password..." value="{{ password }}">
        </div>
        <div class="mb-4">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
            placeholder="Please enter your password again..." value="{{ confirmPassword }}">
        </div>
        <div class="d-grid gap-3">
          <button type="submit" class="btn btn-info btn-block">Register</button>
          <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
          <a href="/auth/google" class="btn btn-secondary btn-block">Google Login</a>
        </div>
      </form>
      <p>Already have an account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>